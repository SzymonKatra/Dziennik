<Window x:Class="Dziennik.View.MainWindow"
        Name="root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:base="clr-namespace:Dziennik"
        xmlns:controls="clr-namespace:Dziennik.Controls"
        xmlns:my="clr-namespace:Dziennik.View"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
        xmlns:c="clr-namespace:Dziennik.CommandUtils"
        Title="Dziennik" Height="350" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <c:EventToCommand Command="{Binding SaveAllCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <WrapPanel Grid.Row="0" Orientation="Horizontal">
            <Button Margin="5,5,5,5" BorderThickness="0" Background="Transparent" ToolTip="Dodaj klasę" Command="{Binding AddCommand}">
                <Image Source="{StaticResource img_add}"/>
            </Button>
            <Button Margin="5,5,5,5" BorderThickness="0" Background="Transparent" ToolTip="Otwórz istniejącą klasę" Command="{Binding OpenCommand}">
                <Image Source="{StaticResource img_open}"/>
            </Button>
            <Button Margin="5,5,5,5" BorderThickness="0" Background="Transparent" ToolTip="Edytuj wybraną klasę"  Command="{Binding EditCommand}">
                <Image Source="{StaticResource img_edit}"/>
            </Button>
            <Button Margin="5,5,5,5" BorderThickness="0" Background="Transparent" ToolTip="Zapisz zmiany w wybranej klasie" Command="{Binding SaveCommand}">
                <Image Source="{StaticResource img_save}"/>
            </Button>
            <Button Margin="5,5,5,5" BorderThickness="0" Background="Transparent" ToolTip="Zapisz zmiany we wszystkich klasach" Command="{Binding SaveAllCommand}">
                <Image Source="{StaticResource img_save_all}"/>
            </Button>

            <Border Width="1" Margin="2" Background="#8888"/>
            
            <CheckBox Content="Imię" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowName, Mode=TwoWay}"/>
            <CheckBox Content="Nazwisko" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowSurname, Mode=TwoWay}"/>
            <CheckBox Content="Email" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowEmail, Mode=TwoWay}"/>
            <CheckBox Content="Oceny (1)" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowFirstMarks, Mode=TwoWay}"/>
            <CheckBox Content="Średnia (1)" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowFirstAverage, Mode=TwoWay}"/>
            <CheckBox Content="Oceny (2)" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowSecondMarks, Mode=TwoWay}"/>
            <CheckBox Content="Średnia (2)" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowSecondAverage, Mode=TwoWay}"/>
            <CheckBox Content="Średnia (roczna)" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding ShowEndingAverage, Mode=TwoWay}"/>

            <Border Width="1" Margin="2" Background="#8888"/>

            <CheckBox Content="Autozapis" Margin="5,5,5,5" VerticalAlignment="Center" IsChecked="{Binding AutoSave, Mode=TwoWay}"/>
        </WrapPanel>
        
        <TabControl Grid.Row="1" ItemsSource="{Binding OpenedSchoolClasses}" SelectedValue="{Binding SelectedClass, Mode=TwoWay}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding ViewModel.Name}"/>
                        <Button Grid.Column="1" Grid.Row="0" Width="12" Height="12" Margin="5,0,0,0" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                Command="{Binding DataContext.CloseTabCommand, ElementName=root}" CommandParameter="{Binding}">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10" Padding="0" Margin="0,0,0,2" Text="x"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <my:SchoolClassControl DataContext="{Binding}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
