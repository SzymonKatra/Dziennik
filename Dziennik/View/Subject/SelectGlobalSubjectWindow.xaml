<Window x:Class="Dziennik.View.SelectGlobalSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:Dziennik.Controls"
        Title="Wybierz temat" Height="300" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" Style="{StaticResource inputControlStyle}" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"/>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding DisplayedSubjects}"
                  CanUserAddRows="False"
                  CanUserSortColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  SelectedItem="{Binding SelectedSubject, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Numer" Binding="{Binding Number}"/>
                <DataGridTextColumn Header="Temat" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <my:OkCancelControl Grid.Row="2" CommandOk="{Binding OkCommand}" CommandCancel="{Binding CancelCommand}"/>
    </Grid>
</Window>
