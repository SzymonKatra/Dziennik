<Window x:Class="Dziennik.MainWindow"
        Name="root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:Dziennik.WPFControls"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
        xmlns:c="clr-namespace:Dziennik.CommandUtils"
        Title="MainWindow" Height="350" Width="900">
    <Grid>
        <DataGrid ItemsSource="{Binding Students}"
                  CanUserAddRows="False"
                  CanUserSortColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  Margin="37,41,45,54"
                  SelectedItem="{Binding SelectedStudent, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Imię" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding Surname}"/>
                <DataGridHyperlinkColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTemplateColumn Header="Oceny (1)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <my:MarksControl MarksSource="{Binding MarksFirst}" SelectedMark="{Binding DataContext.SelectedMark, ElementName=root, Mode=TwoWay}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="AddMark">
                                        <c:EventToCommand Command="{Binding DataContext.AddMarkCommand, ElementName=root}" HandleRouted="HandleAfter"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="EditMark">
                                        <c:EventToCommand Command="{Binding DataContext.EditMarkCommand, ElementName=root}" HandleRouted="HandleAfter"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </my:MarksControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Średnia (1)" Binding="{Binding AverageMarkFirst}"/>
                <DataGridTemplateColumn Header="Oceny (2)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <my:MarksControl MarksSource="{Binding MarksSecond}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Średnia (2)" Binding="{Binding AverageMarkSecond}"/>
                <DataGridTextColumn Header="Średnia (roczna)" Binding="{Binding AverageMarkAll}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
